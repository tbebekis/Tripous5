@{
    ViewBag.Title = "HtmlComboBox";
}

<partial name="~/Demos/Shared/_Index.cshtml" />
<h2>@ViewBag.Title</h2>

<div>
    <p>A combo-box build up-on a select tag (HTMLSelectElement) </p>
    <p>Inherits from <code>tp.HtmlListControl</code> and provides properties such as Items, Count, SelectedIndex, SelectedItem and SelectedValue.</p>
</div>

<br />

<div>
    <button id="btn1" onclick="ResetList()">Set 100 items</button> <br />
</div>


<br />

<div class="html-code">
    <select id="cbo" data-setup="{ Width: 140,  List: [{Id: 100, Name: 'All'}, {Id: 0, Name: 'No stops'}, {Id:1, Name: '1 stop'}]  }"></select>
</div>

<br />



<script class="js-code">
    var cbo;

    tp.Ready(function () {
        cbo = new tp.HtmlComboBox('#cbo');
    })

    function ResetList() {
        cbo.Clear();
        var List = [];
        for (var i = 0, ln = 100; i < ln; i++) {
            List.push({
                Id: i + 1,
                Name: 'Name ' + (i + 1)
            });
        }

        cbo.AddRange(List);
    }

</script>

 