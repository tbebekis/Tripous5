 

@{
    ViewBag.Title = "NumberBox";
} 
 
 
<partial name="~/Demos/Shared/_Index.cshtml" />
<h2>@ViewBag.Title</h2>


<p>A custom number box control. Contains a styled input type="text" element (NOT type="number"). </p>

<p>NOTE: decimal places may be set using the Decimals property or the DataColumn of this control.    </p>

<div>

 
    <div>
        <input id="Box" type="text" data-setup="{ Width: 200, Decimals: 2  }" />
    </div>


</div>

 

<script>    
    var ctrl;
 
    tp.Ready(function () { 
        ctrl = new tp.NumberBox('#Box');
    })

 
 
    

</script>
 