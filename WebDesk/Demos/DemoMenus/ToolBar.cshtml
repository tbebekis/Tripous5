    </div>
</div>



<script class="js-code">
    tp.Ready(function () {

        function ItemClick(Args) {
            var Command = Args.Command;
            tp.InfoNote('Command: ' + Command);
        }

        let tb = new tp.ToolBar('#tb1');
        tb.On('ButtonClick', ItemClick);

        tb = new tp.ToolBar('#tb2');
        tb.On('ButtonClick', ItemClick);
    });



    var NoText = true;
    var IcoMode = tp.ButtonExIcoMode.Left;

    function ToggleNoText() {
        NoText = !NoText;
 
        let tb = tp.GetScriptObject('#tb1');
        tb.SetNoText(NoText);

        tb = tp.GetScriptObject('#tb2');
        tb.SetNoText(NoText);
    }

    function ToggleIcoMode() {
        if (IcoMode === tp.ButtonExIcoMode.Left) {
            IcoMode = tp.ButtonExIcoMode.Top;
        } else if (IcoMode === tp.ButtonExIcoMode.Top) {
            IcoMode = tp.ButtonExIcoMode.None;
        } else {
            IcoMode = tp.ButtonExIcoMode.Left;
        }

        let tb = tp.GetScriptObject('#tb1');
        tb.SetIcoMode(IcoMode);

        tb = tp.GetScriptObject('#tb2');
        tb.SetIcoMode(IcoMode);

    }

</script>

 
