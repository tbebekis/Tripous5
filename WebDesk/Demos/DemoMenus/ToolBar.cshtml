<script>
 
    tp.Ready(function () {

        function ItemClick(Args) {
            var Command = Args.Command;
            tp.InfoNote('Command: ' + Command);
        }

        let tb = new tp.ToolBar('#tb1');
        tb.On('ButtonClick', ItemClick);

        tb =  new tp.ToolBar('#tb2');
        tb.On('ButtonClick', ItemClick);
    });

    

    var NoText = true;
    var IcoMode = tp.ButtonExIcoMode.IcoLeft;    

    function ToggleNoText() {
        NoText = !NoText;

        let tb = tp.GetElement('#tb1');
        tb.SetNoText(NoText);

        tb = tp.GetElement('#tb2');
        tb.SetNoText(NoText);
    }

    function ToggleIcoMode() {
        if (IcoMode === tp.ButtonExIcoMode.IcoLeft) {
            IcoMode = tp.ButtonExIcoMode.IcoTop;
        } else if (IcoMode === tp.ButtonExIcoMode.IcoTop) {
            IcoMode = tp.ButtonExIcoMode.NoIco;
        } else {
            IcoMode = tp.ButtonExIcoMode.IcoLeft;
        }

        let tb = tp.GetElement('#tb1');
        tb.SetIcoMode(IcoMode);

        tb = tp.GetElement('#tb2');
        tb.SetIcoMode(IcoMode);
        
    }

</script>
